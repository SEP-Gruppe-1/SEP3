@page "/Movies"
@using ApiContract
@inject IMovieService MovieService
@inject NavigationManager Nav

<h3>Film i biografen</h3>

@if (movies == null)
{
    <p>Henter film...</p>
}
else if (!movies.Any())
{
    <p>Ingen film fundet.</p>
}
else
{
    <div class="container my-4">
        <div class="row row-cols-1 row-cols-lg-2 g-4">
            @foreach (var movie in movies)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm movie-card">
                        <div class="row g-0 h-100">
                            
                            
                            <div class="col-md-4 col-lg-5">
                                <a @onclick="@(() => GoToMovieDetails(movie.MovieId))">
                                    <img src="@GetPoster(movie)"
                                         class="img-fluid movie-poster"
                                         alt="@movie.MovieTitle" />
                                </a>
                            </div>

                            <!-- Tekst -->
                            <div class="col-md-8 col-lg-7">
                                <div class="card-body d-flex flex-column justify-content-between">
                                    <div>
                                        <h2 class="card-title">@movie.MovieTitle</h2>
                                        <p><strong>Udgivelses dato:</strong> @movie.ReleaseDate</p>
                                        <p><strong>Genre:</strong> @movie.Genre</p>
                                        <p><strong>Spilletid:</strong> @movie.DurationMinutes min</p>
                                    </div>

                                    <div class="text-end mt-3">
                                        <button class="btn btn-primary"
                                                @onclick="@(() => GoToMovieDetails(movie.MovieId))">
                                            Se detaljer
                                        </button>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}

@code {
    private List<MovieDto>? movies;

    protected override async Task OnInitializedAsync()
    {
        movies = await MovieService.GetAllMoviesAsync();
    }

    private string GetPoster(MovieDto movie)
    {
        var fileName = movie.MovieTitle
            .ToLower()
            .Replace(" ", "-") + ".png";

        return $"images/posters/{fileName}";
    }

    private void GoToMovieDetails(int movieId)
    {
        Nav.NavigateTo($"/MovieDetails/{movieId}");
    }
}
