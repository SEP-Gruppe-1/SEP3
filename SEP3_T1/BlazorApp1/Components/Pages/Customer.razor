@page "/customer"
@using ApiContract
@using BlazorApp1.Components.Layout
@using BlazorApp1.Services
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@layout AuthorizedLayout

@inject ICustomerService CustomerService
@inject AuthenticationStateProvider AuthProvider

<h3>Min konto</h3>

@if (bookings == null)
{
    <p>Indlæser dine bestillinger...</p>
}
else if (!bookings.Any())
{
    <p>Du har ingen aktuelle bestillinger.</p>
}
else
{
    <h4>Dine aktuelle bestillinger</h4>

    <table class="table">
        <thead>
        <tr>
            <th>Film</th>
            <th>Dato</th>
            <th>Tid</th>
            <th>Sæder</th>
            <th>Handling</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var b in bookings)
        {
            <tr>
                <td>@b.MovieTitle</td>
                <td>@b.Date</td>
                <td>@b.Time</td>
                <td>@string.Join(", ", b.Seats)</td>
                <td>
                    <button class="btn btn-sm btn-warning me-2"
                            @onclick="() => EditBooking(b.BookingId)">
                        Ret
                    </button>

                    <button class="btn btn-sm btn-danger"
                            @onclick="() => AskDelete(b)">
                        Slet
                    </button>
                </td>
            </tr>
        }
        </tbody>
    </table>
}

@if (showDeletePopup && selectedBooking != null)
{
    <div class="modal fade show d-block">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Bekræft sletning</h5>
                </div>
                <div class="modal-body">
                    Er du sikker på, at du vil slette din bestilling på
                    <b>@selectedBooking.MovieTitle</b>?
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CancelDelete">Annuller</button>
                    <button class="btn btn-danger" @onclick="ConfirmDelete">Slet</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal-backdrop fade show"></div>
}

@code {
    private List<CustomerBookingDto>? bookings;
    private bool showDeletePopup;
    private CustomerBookingDto? selectedBooking;

    protected override async Task OnInitializedAsync()
    {
        var auth = await AuthProvider.GetAuthenticationStateAsync();
        var phone = auth.User.Claims.First(c => c.Type == "phone").Value;

        //bookings = await CustomerService.GetMyBookingsAsync(phone);
    }

    private void AskDelete(CustomerBookingDto booking)
    {
        selectedBooking = booking;
        showDeletePopup = true;
    }

    private void CancelDelete()
    {
        selectedBooking = null;
        showDeletePopup = false;
    }

    private async Task ConfirmDelete()
    {
        //await CustomerService.DeleteBookingAsync(selectedBooking!.BookingId);
        bookings!.Remove(selectedBooking);
        selectedBooking = null;
        showDeletePopup = false;
    }

    private void EditBooking(int bookingId)
    {
