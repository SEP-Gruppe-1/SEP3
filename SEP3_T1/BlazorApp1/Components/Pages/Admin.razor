@page "/admin"
@using ApiContract
@using BlazorApp1.Services
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]

@inject ICustomerService CustomerService

<h3>Admin – Brugerstyring</h3>

@if (customers == null)
{
    <p>Loader kunder...</p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Navn</th>
            <th>Telefon</th>
            <th>Email</th>
            <th>Rolle</th>
            <th>Ændr</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var c in customers)
        {
            <tr>
                <td>@c.Name</td>
                <td>@c.Phone</td>
                <td>@c.Email</td>
                <td>
                    <select value="@c.Role" 
                            @onchange="e => OnRoleChanged(c, e.Value!.ToString())">
                        <option>Customer</option>
                        <option>Employee</option>
                        <option>Admin</option>
                    </select>
                </td>
                <td>
                    <button class="btn btn-sm btn-primary"
                            @onclick="() => UpdateRole(c.Phone, c.Role)">
                        Gem
                    </button>
                </td>
            </tr>
        }
        </tbody>
    </table>
}

@if (showPopup)
{
    <div class="modal fade show d-block" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Rolle opdateret</h5>
                </div>
                <div class="modal-body">
                    <p>@popupMessage</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" @onclick="ClosePopup">OK</button>
                </div>
            </div>
        </div>
    </div>

    <!-- mørk baggrund -->
    <div class="modal-backdrop fade show"></div>
}

@code {
    private List<CustomerDto>? customers;

    // ✅ Gem oprindelige roller så vi kan sammenligne
    private Dictionary<string, string> originalRoles = new();

    // ✅ Popup-state
    private bool showPopup = false;
    private string popupMessage = "";

    protected override async Task OnInitializedAsync()
    {
        customers = await CustomerService.GetCustomers();

        // ✅ Gem oprindelige roller
        originalRoles = customers.ToDictionary(c => c.Phone, c => c.Role);
    }

    private async Task UpdateRole(string phone, string newRole)
    {
        try
        {
            var oldRole = originalRoles[phone];

            // ✅ 1) Hvis rollen er den samme → ingen API-kald
            if (oldRole == newRole)
            {
                popupMessage = $"Ingen ændring – rollen er stadig '{oldRole}'.";
                showPopup = true;
                return;
            }

            // ✅ 2) Kald backend for rigtig opdatering
            await CustomerService.UpdateCustomerRoleAsync(phone, newRole);

            // ✅ 3) Opdater local state
            originalRoles[phone] = newRole;

            popupMessage = $"Rolle ændret \n\nFra: {oldRole}\nTil: {newRole}";
            showPopup = true;
        }
        catch (Exception ex)
        {
            popupMessage = $"Fejl under opdatering:\n{ex.Message}";
            showPopup = true;
        }
    }

    private void OnRoleChanged(CustomerDto c, string newRole)
    {
        var index = customers.IndexOf(c);
        customers[index] = c with { Role = newRole };
    }

    private void ClosePopup()
    {
        showPopup = false;
    }
}
